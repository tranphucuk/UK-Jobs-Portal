<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keyword"]" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,700,900|Roboto+Mono:300,400,500">
    <link rel="stylesheet" href="~/client-side/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/client-side/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/client-side/css/magnific-popup.css">
    <link rel="stylesheet" href="~/client-side/css/jquery-ui.css">
    <link rel="stylesheet" href="~/client-side/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/client-side/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/client-side/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/client-side/css/animate.css">

    <link rel="stylesheet" href="~/client-side/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/client-side/css/fl-bigmug-line.css">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/client-side/css/aos.css">
    <link rel="stylesheet" href="~/client-side/css/style.css">
    <link href="~/client-side/css/custom.min.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <div class="site-wrap">
        <div class="site-mobile-menu">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div> <!-- .site-mobile-menu -->
        <header class="site-navbar py-1" role="banner">
            <div class="container">
                <div class="row align-items-center">

                    <div class="col-6 col-xl-2">
                        <h1 class="mb-0"><a href="/" class="text-black h2 mb-0">Job<strong>portal</strong></a></h1>
                    </div>
                    <div class="col-10 col-xl-10 d-none d-xl-block">
                        <nav class="site-navigation text-right" role="navigation">
                            <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">
                                @*<li class="active"><a href="index.html">Home</a></li>*@
                                @*<li class="has-children">
                                        <a href="category.html">Category</a>
                                        <ul class="dropdown">
                                            <li><a href="#">Full Time</a></li>
                                            <li><a href="#">Part Time</a></li>
                                            <li><a href="#">Freelance</a></li>
                                            <li><a href="#">Internship</a></li>
                                            <li><a href="#">Termporary</a></li>
                                        </ul>
                                    </li>*@

                                <li><a href="/contact-us.html">Contact us</a></li>
                                @*<li><a href="#">Blog</a></li>*@
                                <li class="has-children">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a>@(User.GetClaim("Fullname"))</a>
                                        <ul class="dropdown">
                                            <li><a href="/account-dashboard.html">Dashboard</a></li>
                                            <li><a href="/my-wishlist.html">Wishlist</a></li>
                                            <li>
                                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                                    @Html.AntiForgeryToken()
                                                    <a href="#" class="log-out" onclick="document.getElementById('logoutForm').submit()"><span>Logout</span></a>
                                                </form>
                                            </li>
                                        </ul>
                                    }
                                    else
                                    {
                                        <a>Account</a>
                                        <ul class="dropdown">
                                            <li><a href="/login.html">Login</a></li>
                                            <li><a href="/register.html">Register</a></li>
                                        </ul>
                                    }
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-6 col-xl-2 text-right d-block">

                        <div class="d-inline-block d-xl-none ml-md-0 mr-auto py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle text-black"><span class="icon-menu h3"></span></a></div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
    </div>
    <div class="py-5 bg-primary">
        <div class="container newsleter-con">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-white h4 font-weihgt-normal mb-4">Subscribe Newsletter</h2>
                </div>
            </div>
            <form method="post" role="form" class="row">
                @Html.AntiForgeryToken()
                <div class="col-md-9">
                    <input type="email" id="txt-email-sub" class="form-control border-0 mb-3 mb-md-0" placeholder="Enter Your Email">
                </div>
                <div class="col-md-3">
                    <input type="button" id="btn-subscribe" value="Subscribe" class="btn btn-dark btn-block" style="height: 45px;">
                </div>
            </form>
        </div>
    </div>
    <!-- Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-9"></div>
                <div class="col-lg-3"></div>
            </div>
            <div class="row pt-5 mt-5 text-center">
                <div class="col-md-12">
                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        <a href="our-team.html">About</a> | Data <i class="icon-heart text-danger" aria-hidden="true"></i> by GOV - Develop by Tran Phuc
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/client-side/js/jquery-3.3.1.min.js"></script>
    <script src="~/client-side/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/client-side/js/jquery-ui.js"></script>
    <script src="~/client-side/js/popper.min.js"></script>
    <script src="~/client-side/js/bootstrap.min.js"></script>
    <script src="~/client-side/js/owl.carousel.min.js"></script>
    <script src="~/client-side/js/jquery.stellar.min.js"></script>
    <script src="~/client-side/js/jquery.countdown.min.js"></script>
    <script src="~/client-side/js/jquery.magnific-popup.min.js"></script>
    <script src="~/client-side/js/bootstrap-datepicker.min.js"></script>
    <script src="~/client-side/js/aos.js"></script>
    <script src="~/client-side/js/main.js"></script>
    <script src="~/client-side/js/app/share/base.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>