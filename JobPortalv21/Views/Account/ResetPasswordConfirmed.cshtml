
@{
    ViewData["Title"] = "Recover Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="unit-5 overlay" style="background-image: url('/client-side/images/hero_bg_2.jpg');">
    <div class="container text-center">
        <h2 class="mb-0">Recover Password</h2>
        <p class="mb-0 unit-6"><a href="/">Home</a></p>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8 mb-5 confirm-email">
                <div class="row">
                    <div class="col-xs-12">
                        <h4 style="font-weight: 600">Password restored successfully!</h4>
                        <label>Your password has been reset. Please click <a href="/login.html"><u>here</u></a> to log in.</label>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 mb-3 bg-white">
                    <div class="register-benefits">
                        <h5 class="reg-title">Sign up today and you will be able to :</h5>
                        <ul class="list-not">
                            <li>Speed your way through dashboard</li>
                            <li>Note your own job easily</li>
                            <li>Keep a record of all your job wishlist</li>
                        </ul>
                    </div>
                    <span>Already have an account?</span>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="button" onclick="window.location.href='/login.html'" value="Login here" class="btn btn-primary  py-2 px-4">
                        </div>
                    </div>
                </div>
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">Contact Info</h3>
                    <p class="mb-0 font-weight-bold">Address</p>
                    <p class="mb-4">Salford, Manchester, United Kingdom</p>
                    <p class="mb-0 font-weight-bold">Email Address</p>
                    <p class="mb-0"><a class="col-link">jobportaluk@gmail.com</a></p>
                </div>
            </div>
        </div>
    </div>
</div>




