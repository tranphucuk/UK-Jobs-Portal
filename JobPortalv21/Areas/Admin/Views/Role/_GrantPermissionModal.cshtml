<div class="modal fade bd-example-modal-lg" id="grant-permission-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle"><strong>Grant Permisson</strong></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" role="form" id="frm-role">
                    <input type="hidden" id="hid-role-id" />
                    <table class="table table-sm table-striped tree tbl-permission">
                        <thead>
                            <tr>
                                <th>Function</th>
                                <th><label> <input type="checkbox" id="ck-read-all" />Read</label></th>
                                <th><label><input type="checkbox" id="ck-create-all" />Create</label></th>
                                <th><label><input type="checkbox" id="ck-update-all" />Update</label> </th>
                                <th><label><input type="checkbox" id="ck-delete-all" />Delete</label></th>
                            </tr>
                        </thead>
                        <tbody id="tbl-permisson-body"></tbody>
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-permission">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script type="x-tmpl-mustache" id="tbl-permission-template">
    <tr data-id="{{Id}}" class="treegrid-{{Id}}{{ParentId}}">
        <td>{{{Function}}}</td>
        <td><input type="checkbox" id="ck-read-permission" /></td>
        <td><input type="checkbox" id="ck-create-permission" /></td>
        <td><input type="checkbox" id="ck-update-permission" /></td>
        <td><input type="checkbox" id="ck-delete-permission" /></td>
    </tr>
</script>