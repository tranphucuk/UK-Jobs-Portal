@{
    ViewData["Title"] = "Contact";
}

@section Scripts{
    <script src="~/app/controller/contact/contact.min.js"></script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Contact Management</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txt-contact-keyword" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-info" title="Search..." id="btn-search-contact" type="button">Go!</button>
                </span>
            </div>
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table class="table table-bordered table-striped" id="tbl-contact">
                        <thead>
                            <tr>
                                <th width="3%">ID</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th width="12%">Options</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-contact-content"></tbody>
                    </table>
                    <!--Pageination-->
                    <div class="row">
                        <div class="col-sm-4">
                            Show <select id="ddlShowPage">
                                <option value="5" selected="selected">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                            <span class="item-per-page">
                                Contact/Page.
                            </span>
                            Total Contact: <strong id="lbl-total-contact"></strong>
                        </div>
                        <div class="col-sm-5 pull-right dataTables_paginate">
                            <ul id="pagination-contact" class="pagination-sm pull-right"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="tbl-contact-template" type="x-tmpl-mustache">
    <tr>
        <td><strong>{{Id}}</strong></td>
        <td>{{Email}}</td>
        <td>{{{Subject}}}</td>
        <td>{{CreatedDate}}</td>
        <td>{{{Status}}}</td>
        <td>
            <button class="btn btn-sm btn-secondary btnUpdateContact" title="Edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-sm btn-danger btnDeleteContact" title="Remove" data-id="{{Id}}"><i class="fa fa-trash"></i></button>
        </td>
    </tr>
</script>
<partial name="_UpdateContact.cshtml">
